---
type Props = {
	title: string;
	company: string;
	companyUrl: string;
	location: string;
	startDate: string;
	endDate?: string;
	languages: {
		url: string;
		name: string;
	}[];
	description: string | string[];
};

const { title, company, companyUrl, startDate, endDate, languages, description, location } = Astro.props;
---

<article class="sidebar">
	<p class="fs:xs fw:medium">{startDate} {endDate && `â€“ ${endDate}`}</p>
	<div class="stack gap:0">
		<p class="fs:md fw:medium">
			{title},
			<a href={companyUrl} target="_blank">{company}</a>
		</p>
		<p>{Array.isArray(description) ? description.map((paragraph) => <p>{paragraph}</p>) : description}</p>
