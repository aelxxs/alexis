};

const categories: UsesCategory[] = [
	{
		title: "Hardware",
		items: [
			{
				name: "MacBook Pro M1",
				icon: "/assets/icons/macbook.svg",
			},
			{
				name: "iPad Air 5",
				icon: "/assets/icons/macbook.svg",
			},
			{
				name: "iPhone 15 Pro Max",
				icon: "/assets/icons/macbook.svg",
			},
		],
	},
	{
		title: "Software",
		items: [
			{
				name: 'MacBook Pro 14"',
				icon: "/assets/icons/macbook.svg",
			},
			{
				name: 'MacBook Pro 14"',
				icon: "/assets/icons/macbook.svg",
			},
			{
				name: 'MacBook Pro 14"',
				icon: "/assets/icons/macbook.svg",
			},
		],
	},
	{
		title: "Productivity",
		items: [
			{
				name: 'MacBook Pro 14"',
				icon: "/assets/icons/macbook.svg",
			},
			{
