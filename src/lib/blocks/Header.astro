<style>
	header {
		position: relative;
		padding-bottom: 1rem;
	}

	.brand {
		padding-top: 0.45rem;
	}

	nav li a {
		color: var(--color-text);
		text-decoration: none;
	}

	nav li a:hover {
		text-decoration: underline;
	}

	.active {
		color: red !important;
	}
