---
import Logo from "src/lib/blocks/icons/Logo.astro";
import ThemeToggle from "./ThemeToggle.astro";

const links = [
	{ label: "home", url: "/" },
	{ label: "blog", url: "/blog" },
];
---

<header role="banner" class="repel" style="position: relative;">
	<div class="cluster">
		<a class="brand" href="/" aria-label="Alexis Vielma">
			<Logo />
		</a>
		<span>â€”</span>
		<nav aria-label="primary">
			<ul role="list" class="cluster">
				{
					links.map(({ label, url }) => (
						<li>
							<a href={url}>{label}</a>
						</li>
					))
				}
			</ul>
		</nav>
	</div>
	<div class="cluster" style="--space: 0.75rem;">
		<ThemeToggle />
		<svg width="4" height="4" viewBox="0 0 4 4" fill="none" xmlns="http://www.w3.org/2000/svg">
			<circle cx="2" cy="2" r="2" fill="var(--txt-2)"></circle>
		</svg>
		<svg width="14" height="15" viewBox="0 0 15 16" fill="none" xmlns="http://www.w3.org/2000/svg">
