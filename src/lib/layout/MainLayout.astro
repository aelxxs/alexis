---
import Path from "@blocks/Path.astro";
import "../styling/reset.css";
import "../styling/style.css";

export interface Props {
	title: string;
}

const { title } = Astro.props;

import Header from "@blocks/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<div class="repel">
				<Path />
			</div>
			<h1>{title}</h1>
			<slot />
		</main>
		<footer></footer>
	</body>
</html>

<style>
	body {
		max-width: 60rem;
		padding: 2.5rem 2rem;
		margin: 0 auto;
	}

	body::before {
		content: "";
		position: absolute;
		inset: 0 0;
		width: 100%;
		height: 0.75rem;
		background: black;
	}

	main {
		display: flex;
		padding: 1rem 3.25rem;
		flex-direction: column;
		gap: 1rem;
	}

	@media (max-width: 768px) {
		main {
			padding: 1rem 1rem;
		}
	}
</style>
