---
import "../styling/main.css";
import "../styling/reset.css";

import Path from "@blocks/Path.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;

import Header from "@blocks/Header.astro";
import Stack from "@blocks/Stack.astro";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<div class="repel">
				<Path />
				<svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path
						d="M8.5 2.5C5.1875 2.5 2.5 5.1875 2.5 8.5C2.5 11.8125 5.1875 14.5 8.5 14.5C11.8125 14.5 14.5 11.8125 14.5 8.5C14.5 5.1875 11.8125 2.5 8.5 2.5Z"
						stroke="#3E3E3E"
						stroke-width="1.28125"
						stroke-miterlimit="10"></path>
					<path
						d="M8.5 4.5V9H11.5"
						stroke="#3E3E3E"
						stroke-width="1.28125"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
				</svg>
			</div>
			<div class="title">
				<Stack space="0.75rem">
					<h1>{title}</h1>
					<slot name="title" />
				</Stack>
			</div>
			<slot />
		</main>
		<footer></footer>
	</body>
</html>

<style>
	body {
		max-width: 60rem;
		padding: 2.5rem 1rem;
		margin: 0 auto;
	}

	body::before {
		content: "";
		position: absolute;
		inset: 0 0;
		width: 100%;
		height: 0.75rem;
		background: black;
	}

	main {
		display: flex;
		padding: 1rem 3.25rem;
		flex-direction: column;
		gap: var(--s1);
	}

	@media (max-width: 768px) {
		main {
			padding: 1rem 0.75rem;
		}
	}

	.title {
		margin-top: 0.5rem;
		margin-bottom: 0.75rem;
	}
</style>
